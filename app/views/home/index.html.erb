<% if user_signed_in? %>
	<div class="col-md-10">
		<% @users.each do |user| %>
			<h4>Seja bem vindo <%= user.email %>, ao seu <i>Dashboard</i></h4>
		<% end %>
	</div>
<% else %>
	<div class="col-md-10">
		<h4>Seja bem vindo ao <i>CallMyCustomer</i></h4>
	</div>
<% end %>

<div class="col-md-4">
	<div class="panel panel-default panel-one">
		<div class="panel-body">
			<p class="text-center size-title-panel">Chamado em aberto</p>
		</div>
	</div>
</div>
<div class="col-md-4">
	<div class="panel panel-default panel-two">
		<div class="panel-body">
			<p class="text-center size-title-panel">Chamado em aprovação</p>
		</div>
	</div>
</div>
<div class="col-md-4">
	<div class="panel panel-default panel-three">
		<div class="panel-body">
			<p class="text-center size-title-panel">Chamado finalizado</p>
		</div>
	</div>
</div>

<div class="col-md-12">
	<h4>Lista de Chamados em Aberto</h4>

	<div class="table-responsive">
	  <table class="table table-bordered">
	    <thead>
	      <tr>
	        <th class="title-table">Cliente</th>
	        <th class="title-table">Serviço</th>
	        <th class="title-table">Componente</th>
	        <th class="title-table">Detalhes</th>
	        <th class="title-table">Ação</th>
	      </tr>
	    </thead>

	    <tbody>
	      <% @call_services.each do |call_service| %>
	      <tr>
	        <td class="title-body"><%= call_service.user_id %></td>
	        <td class="title-body"><%= call_service.service_id %></td>
	        <td class="title-body"><%= call_service.component_id %></td>
	        <td class="title-body"><%= call_service.details %></td>
	        <td>
	            <%= link_to 'Show', call_service %>
	            <%= link_to 'Edit', edit_call_service_path(call_service) %>
	            <%= link_to 'Destroy', call_service, method: :delete, data: { confirm: 'Are you sure?' } %>
	        </td>
	      </tr>
	      <% end %>
	    </tbody>
	  </table>
	</div>

</div>
