<% if @user.errors.any? %>
  <div id="error_explanation">
    Há erros no formulário, por favor verifique.
  </div>
<% end %>

<%= form_for(@user) do |f| %>

  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :nome %>
    <%= error_tag @user, :nome %>
  </div>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
    <%= error_tag @user, :email %>
  </div>

  <div class="field">
    <%= f.label :password %><br>
    <%= f.text_field :password %>
    <%= error_tag @user, :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.text_field :password_confirmation %>
    <%= error_tag @user, :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>
