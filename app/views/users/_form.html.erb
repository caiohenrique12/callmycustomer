<% if @user.errors.any? %>
<div id="error_explanation">
  <%= t 'general.form_error'%>
</div>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <p class="panel-title">Todos os campos são obrigatórios</p>
  </div>
  <div class="panel-body">
    <%= form_for(@user) do |f| %>

    <div class="form-group">
      <%= f.label :nome, class: 'control-label' %>
      <%= f.text_field :nome, class: 'form-control' %>
      <%= error_tag @user, :nome %>
    </div>

    <div class="form-group">
      <%= f.label :email, class: 'control-label' %>
      <%= f.text_field :email, class: 'form-control' %>
      <%= error_tag @user, :email %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'control-label' %>
      <%= f.text_field :password, class: 'form-control' %>
      <%= error_tag @user, :password %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: 'control-label' %>
      <%= f.text_field :password_confirmation, class: 'form-control' %>
      <%= error_tag @user, :password_confirmation %>
    </div>

    <div class="form-group">
      <%= f.submit %>
      <%= link_to t('links.back'), users_path, class: 'btn btn-default' %>
    </div>

    <% end %>

  </div>

</div>