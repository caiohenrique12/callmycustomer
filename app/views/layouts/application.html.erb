<!DOCTYPE html>
<html>
<head>
	<title>Callmycustomer</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-default">
		<div class="container-fluid">
			<!-- Callmycustomer and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<%= link_to ' Callmycustomer', root_path, class: 'navbar-brand glyphicon glyphicon-copyright-mark'%>
			</div>

			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				<ul class="nav navbar-nav navbar-right">
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Minha Conta <span class="caret"></span></a>
						<%= render 'layouts/navigation' %>
					</li>
				</ul>
			</div><!-- /.navbar-collapse -->
		</div><!-- /.container-fluid -->
	</nav>
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-2 sidebar">
				<nav>
					<ul class="nav nav-sidebar">
						<li><%= link_to ' Home', root_path, class: 'glyphicon glyphicon-home' %></li>
						<li><%= link_to ' Serviços', services_path, class: 'glyphicon glyphicon-cog' %></li>
						<li><%= link_to ' Componentes', components_path, class: 'glyphicon glyphicon-wrench' %></li>
						<li><%= link_to ' Situações', situations_path, class: 'glyphicon glyphicon-list-alt' %></li>
						<li><%= link_to ' Abrir Chamado', new_call_service_path, class: 'glyphicon glyphicon-phone-alt' %></li>
						<!--<li><%= link_to ' Fechar Chamado', new_call_finish_path %></li>-->
					</ul>
				</nav>
			</div>
			<div class="col-md-10 col-md-offset-2 main">
				<%= yield %>
			</div>
		</div>
	</div>

</body>
</html>
