<p id="notice"><%= notice %></p>

<ol class="breadcrumb bc-3">
  <li><%= link_to 'Home', root_path %></li>
  <li class="active"><b>Lista de Componentes</b></li>
</ol>

<h2><%= t '.title' %></h2>

<div class="table-responsive">
  <table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Ação</th>
    </tr>
  </thead>

  <tbody>
    <% @components.each do |component| %>
      <tr>
        <td><%= component.name %></td>
        <td>
          <%= link_to 'Edit', edit_component_path(component), class: 'btn btn-success' %>
          <%= link_to 'Destroy', component, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= link_to 'New Component', new_component_path, class: 'btn btn-info' %>
